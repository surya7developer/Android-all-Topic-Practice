<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".thread_and_coroutines.ThreadActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:text="Thread Execution Example\nCheck Logcat For Thread Name"
        android:layout_marginBottom="100dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCounter"
        android:text="0"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCounterUpdate"
        android:text="Counter Update"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnExecuteLongRunningTaskInMainThread"
        android:text="Execute Long Running Task in Main Thread"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnExecuteLongRunningTaskInAnotherThread"
        android:text="Execute Long Running Task in Another Thread"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>